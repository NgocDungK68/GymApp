<UserControl x:Class="GymApp.View.Nutritions.DetailFoodView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GymApp.View.Nutritions"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="#F7F9FC">

    <!-- CARD -->
    <Border Background="White"
            Margin="20"
            CornerRadius="14"
            Padding="26">

        <Border.Effect>
            <DropShadowEffect BlurRadius="14"
                              ShadowDepth="2"
                              Color="#CCCCCC"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== HEADER ===== -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- BACK -->
                <Button Content="← Quay lại"
                        Grid.Column="0"
                        Padding="14,6"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Foreground="#1976D2"
                        Cursor="Hand"
                        Click="BtnBack_Click"/>

                <!-- TITLE -->
                <TextBlock Grid.Column="1"
                           Text="🍎 Chi tiết thức ăn"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- ===== CONTENT ===== -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- TÊN THỨC ĂN -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Tên thức ăn"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>

                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBox x:Name="txtFoodName"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#1976D2"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- ĐƠN VỊ KHẨU PHẦN -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Đơn vị khẩu phần"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>

                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBox x:Name="txtServingUnit"
                                     FontSize="16"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- KHẨU PHẦN -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Khẩu phần (Serving size)"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>

                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBox x:Name="txtServingSize"
                                     FontSize="16"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- CALORIES -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Calories"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>

                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBox x:Name="txtCalories"
                                     FontSize="16"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- TẠO BỞI -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="Tạo bởi"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>

                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBlock x:Name="txtCreatedBy"
                                       FontSize="15"
                                       Foreground="#555"/>
                        </Border>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- ===== ACTION BUTTONS ===== -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,26,0,0">

                <!-- TẠO BỮA ĂN -->
                <Button Content="🍽 Tạo bữa ăn"
                        Width="160"
                        Height="42"
                        Margin="0,0,14,0"
                        Background="#1976D2"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnCreateMeal_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- SỬA -->
                <Button x:Name="btnEdit"
                        Content="✏️ Sửa"
                        Width="110"
                        Height="42"
                        Margin="0,0,14,0"
                        Background="#FF9800"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnEdit_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- XÓA -->
                <Button x:Name="btnDelete"
                        Content="🗑 Xóa"
                        Width="110"
                        Height="42"
                        Margin="0,0,14,0"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnDelete_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- LƯU -->
                <Button x:Name="btnSave"
                        Content="💾 Lưu"
                        Width="110"
                        Height="42"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Click="BtnSave_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
