<UserControl x:Class="GymApp.View.Nutritions.DetailMealView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="#F7F9FC">

    <Border Background="White"
            Margin="20"
            CornerRadius="14"
            Padding="26">

        <Border.Effect>
            <DropShadowEffect BlurRadius="14"
                              ShadowDepth="2"
                              Color="#CCCCCC"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== HEADER ===== -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Quay lại"
                        Padding="14,6"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Foreground="#1976D2"
                        Cursor="Hand"
                        Click="BtnBack_Click"/>

                <TextBlock Grid.Column="1"
                           Text="🍽 Chi tiết bữa ăn"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- ===== CONTENT ===== -->
            <ScrollViewer Grid.Row="1">
                <StackPanel>

                    <!-- TÊN BỮA ĂN -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Tên bữa ăn"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBox x:Name="txtMealName"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#1976D2"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- LOẠI BỮA ĂN -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Loại bữa ăn"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>

                        <Border x:Name="bdMealTypeView"
                                Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,6,0,0">
                            <TextBlock x:Name="txtMealType"
                                       FontSize="15"/>
                        </Border>

                        <ComboBox x:Name="cbMealType"
                                  Height="40"
                                  FontSize="15"
                                  Margin="0,6,0,0"
                                  BorderBrush="#DDDDDD"
                                  BorderThickness="1"
                                  Visibility="Collapsed">
                            <ComboBoxItem Content="Sáng"/>
                            <ComboBoxItem Content="Trưa"/>
                            <ComboBoxItem Content="Chiều"/>
                            <ComboBoxItem Content="Tối"/>
                            <ComboBoxItem Content="Snack"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- NGÀY -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Ngày"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>

                        <Border x:Name="bdDateView"
                                Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,6,0,0">
                            <TextBlock x:Name="txtDate"
                                       FontSize="15"/>
                        </Border>

                        <DatePicker x:Name="dpMealDate"
                                    Height="40"
                                    FontSize="15"
                                    Margin="0,6,0,0"
                                    BorderBrush="#DDDDDD"
                                    BorderThickness="1"
                                    Visibility="Collapsed"/>
                    </StackPanel>

                    <!-- MÔ TẢ -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Mô tả"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <Border Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBox x:Name="txtDescription"
                                     FontSize="15"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- TỔNG CALORIES -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Tổng calories"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <Border Background="#FFF3E0"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,8,0,0">
                            <TextBlock x:Name="txtTotalCalories"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="#E65100"/>
                        </Border>
                    </StackPanel>

                    <!-- ===== DANH SÁCH THỨC ĂN ===== -->
                    <TextBlock Text="Danh sách thức ăn"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,10,0,10"/>

                    <DataGrid x:Name="dgFoods"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="True"
                              HeadersVisibility="Column"
                              Height="200"
                              RowHeight="44"
                              Background="White"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <!-- HEADER STYLE (GIỐNG DETAIL ROUTINE) -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="14,8"/>
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <!-- CELL STYLE -->
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>

                            <!-- STT -->
                            <DataGridTextColumn Header="STT"
                                                Binding="{Binding Index}"
                                                Width="60">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="14,8"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- TÊN THỨC ĂN -->
                            <DataGridTextColumn Header="Tên thức ăn"
                                                Binding="{Binding FoodName}"
                                                Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="14,8"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#2C3E50"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- CALORIES -->
                            <DataGridTextColumn Header="Calories"
                                                Binding="{Binding Calories}"
                                                Width="140">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="14,8"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </ScrollViewer>

            <!-- ===== ACTION BUTTONS ===== -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,26,0,0">

                <Button x:Name="btnEdit"
                        Content="✏️ Sửa"
                        Width="110"
                        Height="42"
                        Margin="0,0,14,0"
                        Background="#FF9800"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnEdit_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="🗑 Xóa"
                        Width="110"
                        Height="42"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="15"
                        Margin="0,0,14,0"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnDelete_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnSave"
                        Content="💾 Lưu"
                        Width="110"
                        Height="42"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        Margin="0,0,14,0"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Click="BtnSave_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnAddFood"
                        Content="➕ Thêm thức ăn"
                        Width="140"
                        Height="42"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Click="BtnAddFood_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Grid>
    </Border>
</UserControl>
