<UserControl x:Class="GymApp.View.Nutritions.NutritionManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GymApp.View.Nutritions"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="600"
             d:DesignWidth="900">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= HEADER ================= -->
        <TextBlock Text="Quản lý dinh dưỡng"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#333"/>

        <!-- ================= DATE PICKER ================= -->
        <DatePicker Grid.Row="1"
                    Margin="0,14"
                    HorizontalAlignment="Center"
                    FontSize="14"
                    SelectedDateFormat="Short"/>

        <!-- ================= MAIN CONTENT ================= -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ===== Calories Remaining (Circle) ===== -->
            <Border Width="200"
                    Height="200"
                    Background="#E3F2FD"
                    CornerRadius="100"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="2334"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="#1976D2"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="remaining"
                               FontSize="14"
                               Foreground="#555"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- ===== Detail Cards ===== -->
            <StackPanel Grid.Column="1" Margin="30,0,0,0">

                <!-- Goal -->
                <Border Background="#E8F5E9"
                        CornerRadius="10"
                        Padding="14"
                        Margin="0,0,0,12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="Goal"
                                       FontWeight="Bold"/>
                            <TextBlock Text="2500 kcal"
                                       FontSize="20"
                                       Foreground="#2E7D32"/>
                        </StackPanel>

                        <!-- Edit Button -->
                        <Button Grid.Column="1"
                                Width="34"
                                Height="34"
                                Margin="10,0,0,0"
                                Background="#C8E6C9"
                                BorderThickness="0"
                                Cursor="Hand"
                                Content="✎">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="17">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>

                <!-- Food -->
                <Border Background="#FFF3E0"
                        CornerRadius="10"
                        Padding="14"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Food"
                                   FontWeight="Bold"/>
                        <TextBlock Text="1200 kcal"
                                   FontSize="20"
                                   Foreground="#FF9800"/>
                    </StackPanel>
                </Border>

                <!-- Exercise -->
                <Border Background="#E3F2FD"
                        CornerRadius="10"
                        Padding="14">
                    <StackPanel>
                        <TextBlock Text="Exercise"
                                   FontWeight="Bold"/>
                        <TextBlock Text="466 kcal"
                                   FontSize="20"
                                   Foreground="#1976D2"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </Grid>

        <!-- ================= BOTTOM BUTTONS ================= -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,24,0,0">

            <!-- View Meals -->
            <Button Content="Xem bữa ăn"
                    Width="160"
                    Height="42"
                    Margin="0,0,14,0"
                    Background="#E3F2FD"
                    Foreground="#1976D2"
                    FontSize="15"
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!-- Add Meal -->
            <Button Content="Thêm bữa ăn"
                    Width="160"
                    Height="42"
                    Background="#1976D2"
                    Foreground="White"
                    FontSize="15"
                    Cursor="Hand"
                    BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>

    </Grid>
</UserControl>
