<UserControl x:Class="GymApp.View.Routines.DetailRoutineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900"
             Background="#F7F9FC">

    <Border Background="White"
            Margin="20"
            CornerRadius="14"
            Padding="26">

        <Border.Effect>
            <DropShadowEffect BlurRadius="14"
                              ShadowDepth="2"
                              Color="#CCCCCC"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ===== HEADER ===== -->
            <Grid Grid.Row="0" Margin="0,0,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="← Quay lại"
                        Padding="14,6"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="14"
                        Foreground="#1976D2"
                        Cursor="Hand"
                        Click="BtnBack_Click"/>

                <TextBlock Grid.Column="1"
                           Text="📋 Chi tiết lịch tập"
                           FontSize="26"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!-- ===== CONTENT ===== -->
            <ScrollViewer Grid.Row="1">
                <StackPanel>

                    <!-- TÊN LỊCH -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Tên lịch tập"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <Border Background="#F5F7FA" CornerRadius="8" Padding="14" Margin="0,8,0,0">
                            <TextBox x:Name="txtRoutineName"
                                     FontSize="18"
                                     FontWeight="Bold"
                                     Foreground="#1976D2"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- MÔ TẢ -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Mô tả"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <Border Background="#F5F7FA" CornerRadius="8" Padding="14" Margin="0,8,0,0">
                            <TextBox x:Name="txtDescription"
                                     FontSize="15"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     TextWrapping="Wrap"
                                     IsReadOnly="True"/>
                        </Border>
                    </StackPanel>

                    <!-- MỨC ĐỘ -->
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="Mức độ"
                                   FontSize="15"
                                   Foreground="#34495E"
                                   FontWeight="SemiBold"/>

                        <!-- View mode -->
                        <Border x:Name="bdLevelView"
                                Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="14"
                                Margin="0,6,0,0">
                            <TextBlock x:Name="txtLevel"
                                        FontSize="15"/>
                        </Border>

                        <!-- Edit mode -->
                        <ComboBox x:Name="cbLevel"
                                  Height="40"
                                  FontSize="15"
                                  Margin="0,6,0,0"
                                  BorderBrush="#DDDDDD"
                                  BorderThickness="1"
                                  Visibility="Collapsed">
                            <ComboBoxItem Content="Beginner"/>
                            <ComboBoxItem Content="Intermediate"/>
                            <ComboBoxItem Content="Advanced"/>
                            <ComboBoxItem Content="Expert"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- TẠO BỞI -->
                    <StackPanel Margin="0,0,0,18">
                        <TextBlock Text="Tạo bởi"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <Border Background="#F5F7FA" CornerRadius="8" Padding="14" Margin="0,8,0,0">
                            <TextBlock x:Name="txtCreatedBy"
                                       FontSize="15"/>
                        </Border>
                    </StackPanel>

                    <!-- ===== DANH SÁCH BÀI TẬP ===== -->
                    <TextBlock Text="Danh sách bài tập"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="0,10,0,10"/>

                    <DataGrid x:Name="dgExercises"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              IsReadOnly="False"
                              HeadersVisibility="Column"
                              Height="200"
                              RowHeight="44"
                              Background="White"
                              BorderThickness="0"
                              GridLinesVisibility="None"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <!-- HEADER STYLE -->
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Padding" Value="14,8"/>
                                <!-- kẻ cột + kẻ hàng -->
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <!-- CELL BORDER (kẻ cột thẳng) -->
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                <Setter Property="BorderThickness" Value="0,0,1,1"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </DataGrid.CellStyle>

                        <DataGrid.Columns>

                            <!-- STT -->
                            <DataGridTextColumn Header="STT"
                                                Binding="{Binding Index}"
                                                Width="60"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="14,8"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- TÊN BÀI TẬP -->
                            <DataGridTextColumn Header="Tên bài tập"
                                                Binding="{Binding ExerciseName}"
                                                Width="*"
                                                IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Padding" Value="14,8"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#2C3E50"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- SỐ HIỆP (CÓ THỂ EDIT) -->
                            <DataGridTextColumn Header="Số hiệp"
                            Binding="{Binding Sets, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Width="100"
                            IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="14,8"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>

                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Padding" Value="10,6"/>
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                        <EventSetter Event="PreviewTextInput"
                                                     Handler="NumberOnly_PreviewTextInput"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>
            </ScrollViewer>

            <!-- ===== ACTION BUTTONS ===== -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,26,0,0">

                <!-- BẮT ĐẦU BUỔI TẬP -->
                <Button Content="🏃 Bắt đầu buổi tập"
                        Width="180"
                        Height="42"
                        Margin="0,0,14,0"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnStartWorkout_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- SỬA -->
                <Button x:Name="btnEdit"
                        Content="✏️ Sửa"
                        Width="110"
                        Height="42"
                        Margin="0,0,14,0"
                        Background="#FF9800"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnEdit_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- XÓA -->
                <Button Content="🗑 Xóa"
                        Width="110"
                        Height="42"
                        Background="#E53935"
                        Foreground="White"
                        FontSize="15"
                        Margin="0,0,14,0"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnDelete_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- 💾 LƯU (ẨN BAN ĐẦU) -->
                <Button x:Name="btnSave"
                        Content="💾 Lưu"
                        Width="110"
                        Height="42"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        Margin="0,0,14,0"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Click="BtnSave_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- ➕ Thêm bài tập (ẨN BAN ĐẦU) -->
                <Button x:Name="btnAddExercise"
                        Content="➕ Thêm bài tập"
                        Width="110"
                        Height="42"
                        Background="#2196F3"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        Click="BtnAddExercise_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="22">
                                <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
