<Window x:Class="GymApp.View.ProfileSetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hoàn thiện hồ sơ"
        Height="480"
        Width="820"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT -->
        <Border Grid.Column="0" Background="#2E7D32">
            <StackPanel VerticalAlignment="Center" Margin="30">
                <TextBlock
                    Text="THÔNG TIN"
                    Foreground="White"
                    FontSize="28"
                    FontWeight="Bold" />
            </StackPanel>
        </Border>

        <!-- RIGHT -->
        <StackPanel Grid.Column="1"
                    Width="320"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <TextBlock Text="Thông tin cá nhân"
                       FontSize="24"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Tuổi -->
            <TextBlock Text="Tuổi" />
            <TextBox x:Name="txtAge" Height="36"/>

            <!-- Chiều cao -->
            <TextBlock Text="Chiều cao (cm)" Margin="0,10,0,0"/>
            <TextBox x:Name="txtHeight" Height="36"/>

            <!-- Cân nặng -->
            <TextBlock Text="Cân nặng (kg)" Margin="0,10,0,0"/>
            <TextBox x:Name="txtWeight" Height="36"/>

            <!-- Giới tính -->
            <TextBlock Text="Giới tính" Margin="0,10,0,0"/>
            <ComboBox x:Name="cbGender" Height="36">
                <ComboBoxItem Content="Nam"/>
                <ComboBoxItem Content="Nữ"/>
            </ComboBox>

            <!-- About -->
            <TextBlock Text="Mô tả bản thân (không bắt buộc)" Margin="0,10,0,0"/>
            <TextBox x:Name="txtAbout"
                     Height="60"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"/>

            <Button Content="Hoàn tất"
                    Height="42"
                    Margin="0,20,0,0"
                    Background="#2E7D32"
                    Foreground="White"
                    Click="Finish_Click"/>
        </StackPanel>
    </Grid>
</Window>
