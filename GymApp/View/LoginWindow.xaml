<Window x:Class="GymApp.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gym Online"
        Height="480"
        Width="820"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- LEFT -->
        <Border Grid.Column="0" Background="#2E7D32">
            <StackPanel VerticalAlignment="Center" Margin="30">
                <TextBlock
                    Text="GYM ONLINE"
                    Foreground="White"
                    FontSize="32"
                    FontWeight="Bold" />

                <TextBlock
                    Text="Train smart. Eat clean. Stay strong."
                    Foreground="White"
                    Margin="0,10,0,0" />
            </StackPanel>
        </Border>

        <!-- RIGHT -->
        <StackPanel
            Grid.Column="1"
            Width="300"
            VerticalAlignment="Center"
            HorizontalAlignment="Center">

            <TextBlock
                x:Name="txtTitle"
                Text="Đăng nhập"
                FontSize="26"
                FontWeight="SemiBold"
                HorizontalAlignment="Center" />

            <!-- Username -->
            <Grid Margin="0,20,0,0">
                <TextBox
                    x:Name="txtUsername"
                    Height="40"
                    Padding="10"
                    FontSize="14"
                    TextChanged="txtUsername_TextChanged" />

                <TextBlock
                    x:Name="txtUsernameHint"
                    Text="Tên đăng nhập"
                    Foreground="Gray"
                    Margin="14,0,0,0"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False" />
            </Grid>

            <!-- Password -->
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>

                <!-- PasswordBox (ẩn mật khẩu) -->
                <PasswordBox
                    x:Name="txtPassword"
                    Grid.Column="0"
                    Height="40"
                    Padding="10"
                    PasswordChanged="txtPassword_PasswordChanged" />

                <!-- TextBox (hiện mật khẩu) -->
                <TextBox
                    x:Name="txtPasswordVisible"
                    Grid.Column="0"
                    Height="40"
                    Padding="10"
                    Visibility="Collapsed" />

                <!-- Placeholder -->
                <TextBlock
                    x:Name="txtPasswordHint"
                    Text="Mật khẩu"
                    Foreground="Gray"
                    Margin="14,0,0,0"
                    VerticalAlignment="Center"
                    IsHitTestVisible="False" />

                <!-- Eye button -->
                <Button
                    Grid.Column="1"
                    Content="👁"
                    FontSize="14"
                    Background="Transparent"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="TogglePasswordVisibility_Click" />
            </Grid>

            <!-- Main button -->
            <Button
                x:Name="btnMain"
                Content="Đăng nhập"
                Height="42"
                Margin="0,20,0,10"
                Background="#2E7D32"
                Foreground="White"
                FontSize="15"
                Click="MainButton_Click" />

            <!-- Switch login / register -->
            <TextBlock HorizontalAlignment="Center">
                <Run
                    x:Name="txtSwitchQuestion"
                    Text="Chưa có tài khoản? " />

                <Run
                    x:Name="txtSwitchAction"
                    Text="Đăng ký"
                    Foreground="#2E7D32"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    MouseDown="SwitchMode_Click" />
            </TextBlock>

        </StackPanel>
    </Grid>
</Window>
