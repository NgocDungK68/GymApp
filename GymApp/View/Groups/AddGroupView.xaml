<Window x:Class="GymApp.View.Groups.AddGroupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GymApp.View.Groups"
        mc:Ignorable="d"
        Title="Thêm nhóm"
        Height="540"
        Width="480"
        Background="#F2F6F8"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <!-- CARD -->
    <Border Background="White"
            Margin="20"
            CornerRadius="14"
            Padding="26">

        <Border.Effect>
            <DropShadowEffect BlurRadius="14"
                              ShadowDepth="2"
                              Color="#CCCCCC"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <TextBlock Grid.Row="0"
                       Text="➕ Thêm nhóm mới"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,22"
                       Foreground="#2C3E50"/>

            <!-- FORM -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- TÊN NHÓM -->
                    <StackPanel Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Tên nhóm"
                                       FontSize="15"
                                       Foreground="#34495E"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text=" *"
                                       FontSize="15"
                                       Foreground="Red"/>
                        </StackPanel>

                        <TextBox x:Name="txtGroupName"
                                 Height="40"
                                 Padding="12,8"
                                 FontSize="15"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"
                                 Margin="0,6,0,0"/>
                    </StackPanel>

                    <!-- MÔ TẢ -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="Mô tả nhóm"
                                   FontSize="15"
                                   Foreground="#34495E"
                                   FontWeight="SemiBold"/>

                        <TextBox x:Name="txtGroupDescription"
                                 Height="120"
                                 Padding="12"
                                 FontSize="15"
                                 BorderBrush="#DDDDDD"
                                 BorderThickness="1"
                                 Margin="0,6,0,0"
                                 TextWrapping="Wrap"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto"/>
                    </StackPanel>

                </StackPanel>
            </ScrollViewer>

            <!-- BUTTONS -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,22,0,0">

                <!-- XÁC NHẬN -->
                <Button Content="✔ Xác nhận"
                        Width="130"
                        Height="40"
                        Margin="0,0,14,0"
                        Background="#4CAF50"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnConfirm_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- HỦY -->
                <Button Content="✖ Hủy"
                        Width="130"
                        Height="40"
                        Background="#9E9E9E"
                        Foreground="White"
                        FontSize="15"
                        Cursor="Hand"
                        BorderThickness="0"
                        Click="BtnCancel_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="20">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

        </Grid>
    </Border>
</Window>
